<section id="todos" class="<%= list_class(@list) %>">
  <header>
    <h2>
      <%= @list[:name] %>
    </h2>
    <ul>
      <% if @list[:todos].any?{ |todo| !todo[:done] } %>
      <li>
        <form action="/lists/<%= @list_id %>/complete_all" method="post">
          <button type="submit" class="check">Complete all</button>
        </form>
      </li>
      <% end %>
      <li>
        <a class="edit" href="/lists/<%= @list_id %>/edit">Edit list</a>
      </li>
    </ul>
  </header>

  <% if @list[:todos].empty? %>
    <p>
      No todos in this list. Add a first one below
    </p>
  <% else %>
    <ul id="todos">
      <% @list[:todos].each_with_index do |todo, todo_idx| %>
      <% if todo[:done] %>
        <li class="complete">
      <% else %>
        <li>
      <% end %>
        <form action="/lists/<%= @list_id %>/todos/<%= todo_idx%>" method="post" class="check">
          <input type="hidden" name="completed" value="<%= !todo[:done]%>">
          <button type="submit">Complete</button>
        </form>

        <h3><%= todo[:name] %></h3>
        <form action="/lists/<%= @list_id %>/todos/<%= todo_idx%>/delete" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
      <% end %>
    </ul>
  <% end %>

  <form action="/lists/<%= @list_id %>/todos" method="post">
    <dl>
      <dt>
        <label for="todo">Enter a new todo item:</label>
      </dt>
      <dd>
        <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
      </dd>
    </dl>
    <fieldset class="actions">
      <input type="submit" value="Add">
    </fieldset>
  </form>

</section>

<% content_for :header_links do %>
  <a href="/lists" class="list">All lists</a>
<% end %>
