<section id="todos">
  <header>
    <h2>
      <%= @list[:name] %>
    </h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= @list_id %>/edit">Edit list</a>
      </li>
    </ul>
  </header>

  <% if @list[:todos].empty? %>
    <p>
      No todos in this list. Add a first one below
    </p>
  <% else %>
    <ul id="todos">
      <% @list[:todos].each do |todo| %>
      <li>
        <h3><%= todo[:name] %></h3>
      </li>
      <% end %>
    </ul>
  <% end %>

  <form action="/lists/<%= @list_id %>/todos" method="post">
    <dl>
      <dt>
        <label for="todo">Enter a new todo item:</label>
      </dt>
      <dd>
        <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
      </dd>
    </dl>
    <fieldset class="actions">
      <input type="submit" value="Add">
    </fieldset>
  </form>

</section>

<% content_for :header_links do %>
  <a href="/lists">All lists</a>

<% end %>
